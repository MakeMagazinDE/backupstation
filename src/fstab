proc            /proc           proc    defaults          0       0
PARTUUID=5f1f5ac2-01  /boot           vfat    defaults          0       2
PARTUUID=5f1f5ac2-02  /               ext4    defaults,noatime  0       1

/dev/sda1 /mnt/ext_hdd ntfs rw 0 0

